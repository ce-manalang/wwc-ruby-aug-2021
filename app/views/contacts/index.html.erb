<p id="notice"><%= notice %></p>

<div class="md:flex md:items-center md:justify-between">
  <div class="flex-1 min-w-0">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Contacts
      </h2>
    </div>
  </div>

  <div class="mr-10 mt-4 flex md:mt-0 md:ml-4">
    <%= link_to 'New Contact', new_contact_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:online-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
</div>

<div class="max-w-7xl mx-auto p-4 sm:p-6 md:p-8">
  <ul id="contacts" role="list" class="divide-y divide-gray-200">
    <% @contacts.each do |contact| %>
      <li class="relative bg-white py-5 px-4 hover:bg-gray-50 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600">
        <div class="flex justify-between space-x-3">
          <div class="min-w-0 flex-1">
            <p class="text-sm font-medium text-gray-900 truncate"><%= contact.name %></p>
            <p class="text-sm text-gray-500 truncate"><%= contact.email %></p>
          </div>
          <div class="flex-shrink-0 whitespace-nowrap text-sm text-gray-500">
            <%= link_to 'Show', contact, class: "text-indigo-600 hover:text-indigo-900" %> |
            <%= link_to 'Edit', edit_contact_path(contact), class: "text-indigo-600 hover:text-indigo-900" %> |
            <%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-indigo-600 hover:text-indigo-900" %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
