<p id="notice"><%= notice %></p>

<div class="md:flex md:items-center md:justify-between">
  <div class="flex-1 min-w-0">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Conversations
      </h2>
    </div>
  </div>
  <div class="mr-10 mt-4 flex md:mt-0 md:ml-4">
    <%= link_to 'New Conversation', new_conversation_path, class:"inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-smm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
</div>

<div class="max-w-7xl mx-auto p-4 sm:p-6 md:p-8">
  <%= turbo_stream_from "conversations" %>
  <ul id="conversations" role="list" class="divide-y divide-gray-200">
    <%= render @conversations %>
  </ul>
</div>
